<odoo>
    <!-- Form View -->
    <record id="view_issue_form_inline" model="ir.ui.view">
        <field name="name">pt.issue.form</field>
        <field name="model">pt.issue</field>
        <field name="arch" type="xml">
            <form string="Issue">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="status"/>
                        <field name="description"/>
                        <field name="weight"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="priority"/>
                        <field name="assignee_id"/>
                        <field name="reviewer_id"/>
                        <field name="project_id" readonly="true"/>
                        <field name="milestone_id" domain="[('project_id', '=', project_id)]" context="{'default_project_id': project_id}"/>
                        <field name="tag_ids" domain="[('project_id', '=', project_id)]" context="{'default_project_id': project_id}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>